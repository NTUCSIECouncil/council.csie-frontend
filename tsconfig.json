{
  "extends": "@tsconfig/next/tsconfig.json",
  "compilerOptions": {
    "resolveJsonModule": true,
    "target": "ES2023",
    "paths": {
      "@/*": ["./src/*"],
      "@public/*": ["./public/*"]
    }
  },
  "include": [
    "eslint.config.js",
    ".next/types/**/*.ts",
    "next-env.d.ts",
    "next.config.js",
    "**/*.ts",
    "**/*.tsx"
  ],
  "exclude": ["node_modules"]
}
